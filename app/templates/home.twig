<html>
    <head>
        <meta charset="utf-8"/>
        <title>Vehicle Sign Up</title>
        <link href='//fonts.googleapis.com/css?family=Lato:300' rel='stylesheet' type='text/css'>
        <meta name="viewport" content="width=device-width, user-scalable=no">
        <link href='{{ base_url() }}/css/bulma.css' rel='stylesheet' type='text/css'>
        <link href='{{ base_url() }}/css/font-awesome.css' rel='stylesheet' type='text/css'>
        <link href='{{ base_url() }}/css/alt.css' rel='stylesheet' type='text/css'>
        <script src="{{ base_url() }}/js/jquery.js"></script>
        <!-- Flatpicker -->
        <link rel="stylesheet" href="{{ base_url() }}/css/flatpickr.min.css">
        <script src="{{ base_url() }}/js/flatpickr.js"></script>
        <!-- jQuery-timepicker -->
        <link rel="stylesheet" href="{{ base_url() }}/picker/jquery.timepicker.css">
        <script src="{{ base_url() }}/picker/jquery.timepicker.min.js"></script>
        <style>
            .is-hour-range {
                font-size: 1.1em;
                font-weight: 500;
                display: block;
            }

            .is-car-reservation {

            }

            .is-unavailable {
                background-color: #dedede;
            }

            hr.pretty {
                border-top: 1px solid #FA8072;
                text-align: center;
            }
            hr.pretty:after {
                content: 'ยง';
                display: inline-block;
                position: relative;
                top: -14px;
                padding: 0 10px;
                background: #ffffff;
                color: #FA8072;
                font-size: 18px;
                -webkit-transform: rotate(60deg);
                -moz-transform: rotate(60deg);
                transform: rotate(60deg);
            }
        </style>



    </head>
    <body>
        <section id="bannerimage">

            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        &nbsp;Vehicle Sign Up
                    </h1>
                    <br>
                    <h2 class="subtitle">
                        <button> <a href="mailto:mayuran@hindu.org?subject=Vehicle%20Signout%20Bug&body=Please%20enter%20description%20of%20bug"><font color="black"> Click here to report a bug.</font></a> </button>
                    </h2>





<button>
<a href="http://agni.local"><font size="4"color="black"> Click here to return to Monk's Website </font> </a></button>

<h3>


                </div>
            </div>
        </section>

        <br>
        <div class="container">
            {%  for day in days %}
            <div class="tile is-ancestor">
                <div class="tile is-parent">

                    {% if day.SunOrStar == "Star" %}
                    <div class="tile box is-child notification is-danger is-2">
                    {% else %}
                    <div class="tile box is-child notification is-warning is-2">
                    {%  endif %}
                        <p class="title"> {{ day.SunOrStar }} {{ day.SunOrStar_Num }}</p>
                        <p class="subtitle">{{ day.Date|date("m/d/Y") }}</p>
                    </div>

                    {% for car in day.Cars %}
                    {%  if car.is_available == 1 %}
                    <div class="tile box is-child">
                    {%  else %}
                    <div class="tile box is-child is-unavailable is-disabled">
                    {% endif %}
                        <p class="title"> {{ car.name }} <i class="fa fa-plus-square-o is-signup-trigger" data-car-id="{{ car.car_id }}" data-car-name="{{ car.name }}" data-day="{{ day.Date|date("Y-m-d") }}"></i> </p>
                        <p class="subtitle">{{ car.comment }}</p>

                        <ul>
                            {% for reservation in car.Reservations %}
                            <li class="is-car-reservation">
                                <div class="is-hour-range">{{ reservation.start|date("h:i A") }} - {{ reservation.end|date("h:i A") }}</div>
                                <p>
                                    <i>{{ reservation.who }}</i> &mdash; {{ reservation.comment }}.
                                    <span class="is-edit-trigger"
                                          data-reservation-id="{{ reservation.reservation_id }}"
                                          data-car-id="{{ car.car_id }}"
                                          data-car-name="{{ car.name }}"
                                          data-day="{{ day.Date|date("Y-m-d") }}"
                                          data-comment="{{ reservation.comment }}"
                                          data-start="{{ reservation.start }}"
                                          data-end="{{ reservation.end }}"
                                          data-who="{{ reservation.who }}">
                                        <i class="fa fa-edit"></i>
                                    </span>
                                </p>
                                <hr class="pretty">
                            </li>
                            {% endfor %}
                        </ul>

                    </div>
                    {% endfor %}


                </div>

            </div>
            {%  endfor %}
        </div>
        {% include 'signup-modal.twig' with days %}
        {% include 'edit-modal.twig' with days %}

        <script src="{{ base_url() }}/js/app.js"></script>
    </body>
</html>
